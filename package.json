{
	"name": "@vortechsolutions/gridjs-svelte",
	"type": "module",
	"version": "2.1.2",
	"description": "A Svelte wrapper component for Grid.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"default": "./dist/index.js",
			"svelte": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"types": "./dist/index.d.ts",
	"svelte": "./dist/index.js",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"scripts": {
		"build": "svelte-package",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"keywords": [
		"svelte",
		"gridjs"
	],
	"license": "MIT",
	"peerDependencies": {
		"gridjs": ">=5.0.0",
		"svelte": ">=5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.17.3",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@testing-library/jest-dom": "6.6.3",
		"@testing-library/svelte": "5.2.7",
		"@typescript-eslint/eslint-plugin": "8.25",
		"@typescript-eslint/parser": "8.25",
		"eslint": "9.21",
		"eslint-config-prettier": "10.0",
		"eslint-plugin-svelte": "^2.45.1",
		"gridjs": "6.2",
		"jsdom": "26.0.0",
		"prettier": "3.5",
		"prettier-plugin-svelte": "3.3",
		"svelte": "5.20",
		"svelte-check": "4.1",
		"svelte-preprocess": "6.0",
		"svelte2tsx": "0.7.34",
		"tslib": "2.8",
		"typescript": "5.7",
		"vitest": "3.0.7"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/VortechSolutions/gridjs-svelte.git"
	},
	"bugs": {
		"url": "https://github.com/VortechSolutions/gridjs-svelte/issues"
	},
	"homepage": "https://gridjs.io/docs/integrations/svelte",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"files": [
		"dist"
	]
}